<?xml version="1.0"?>
<config>
    <tabs>
        <sstech module="cancelorder">
            <label>SSTech</label>
            <sort_order>200</sort_order>
        </sstech>
    </tabs>
    <sections>
        <cancelorder translate="label" module="cancelorder">
            <label>Cancel Order</label>
            <tab>sstech</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <customer translate="label">
                    <label>Customer Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cancel_new translate="label">
                            <label>Allow Customers to Cancel New Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable allow register customer to cancel order</comment>
                        </cancel_new>
                        <cancel_pending translate="label">
                            <label>Allow Customers to Cancel Pending Payment Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable allow customer to cancel pending payment order</comment>
                        </cancel_pending>
                        <cancel_processing  translate="label">
                            <label>Allow Customers to Cancel Processing Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable allow customer to cancel processing order</comment>
                        </cancel_processing>
                        <cancel_status translate="label">
                            <label>Canceled Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cancelorder/system_config_source_order_status_canceled</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>add the status for the cancel order</comment>
                        </cancel_status>
                    </fields>
                </customer>
                <customer_general translate="label">
                    <label>General Customers (Not Logged In)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Yes to enable guest user for cancel order.</comment>
                        </enabled>
                        <toplinks translate="label">
                            <label>Display in Top Links</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Yes to allow for display cancle link in Top Links.</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </toplinks>
                    </fields>
                </customer_general>
                <email>
                    <label>Cancel Order Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>18</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <recipient_name translate="label">
                            <label>Send Name To Admin</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </recipient_name>
                        <sender_email_identity translate="label">
                            <label>Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>250</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sender_email_identity>
                        <email_template translate="label">
                            <label>Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>260</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template>
                    </fields>
                </email> 
                <cron translate="label">
                    <label>Cron Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cancel_pending translate="label">
                            <label>Cancel Pending Payment Orders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable cancel pending payment order</comment>
                        </cancel_pending>
                        <cancel_after translate="label">
                            <label>Cancel Pending Payment Orders After (minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>add number of minutes to cancel the pending payment order</comment>
                        </cancel_after>
                        <cancel_status translate="label">
                            <label>Canceled Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cancelorder/system_config_source_order_status_canceled</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>add the status for the cancel order</comment>
                        </cancel_status>
                    </fields>
                </cron>
            </groups>
        </cancelorder>
    </sections>
</config>
