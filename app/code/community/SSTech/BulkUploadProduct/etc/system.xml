<?xml version="1.0"?> 
<config>
    <tabs>
        <sstech module="bulkuploadproduct">
            <label>SSTech</label>
            <sort_order>200</sort_order>
        </sstech>
    </tabs>
    <sections>
        <bulkuploadproduct translate="label" module="bulkuploadproduct">
            <label>Order Bulk Product</label>
            <tab>sstech</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
               <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disable extension entirely.</comment>
                        </enabled>
                    </fields>
                </general>               
                <functionality>
                    <label>Order Bulk Product Functionality</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>18</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                       <toplinks translate="label">
                            <label>Display in Top Links</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Yes to allow for display bulk order link in Top Links.</comment>
                        </toplinks>
                        <column translate="label">
                            <label>Column Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter columns like 8,8,8,8.</comment>
                        </column>
                    </fields>
                </functionality>                 
            </groups>
        </bulkuploadproduct>
    </sections>
</config>

