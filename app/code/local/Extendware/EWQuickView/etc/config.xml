<?xml version="1.0"?>
<config>
	<modules>
		<Extendware_EWQuickView>
			<version>1.2.8</version>
			<extendware>
	            <copyright_holder>extendware</copyright_holder>
	            <configure_url>extendware_ewquickview/adminhtml_config/index</configure_url>
            </extendware>
		</Extendware_EWQuickView>
	</modules>
	<admin>
        <routers>
			<extendware_ewquickview>
				<use>admin</use>
				<args>
					<module>Extendware_EWQuickView</module>
					<frontName>extendware_ewquickview</frontName>
				</args>
			</extendware_ewquickview>
        </routers>
    </admin>
    <adminhtml>
    	<translate>
			<modules>
				<Extendware_EWQuickView>
					<files>
						<default>extendware/Extendware_EWQuickView.csv</default>
					</files>
				</Extendware_EWQuickView>
			</modules>
		</translate>
		<layout>
			<updates>
				<ewquickview>
					<file>extendware/ewquickview.xml</file>
				</ewquickview>
			</updates>
		</layout>
		<routers></routers>
	</adminhtml>
	<frontend>
		<translate>
			<modules>
				<Extendware_EWQuickView>
					<files>
						<default>extendware/Extendware_EWQuickView.csv</default>
					</files>
				</Extendware_EWQuickView>
			</modules>
		</translate>
		<layout>
			<updates>
				<ewquickview>
					<file>extendware/ewquickview.xml</file>
				</ewquickview>
			</updates>
		</layout>
		<routers>
			<ewquickview>
				<use>standard</use>
				<args>
					<module>Extendware_EWQuickView</module>
					<frontName>ewquickview</frontName>
				</args>
			</ewquickview>
        </routers>
    </frontend>
	<global>
		<models>
			<ewquickview>
				<class>Extendware_EWQuickView_Model</class>
			</ewquickview>
		</models>
		<blocks>
			<ewquickview>
                <class>Extendware_EWQuickView_Block</class>
            </ewquickview>
		</blocks>
		<helpers>
			<ewquickview>
				<class>Extendware_EWQuickView_Helper</class>
			</ewquickview>
		</helpers>
		<resources>
			<ewquickview_setup>
				<setup>
					<module>Extendware_EWQuickView</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</ewquickview_setup>
		</resources>
		<events></events>
		<template></template>
	</global>
	<input></input>
	<crontab></crontab>
	<default>
		<ewquickview>
			<general>
				<enabled>1</enabled>
			</general>
			<behavior>
				<transitions_enabled>1</transitions_enabled>
				<overlay_close_enabled>1</overlay_close_enabled>
				<bundle_support_enabled>1</bundle_support_enabled>
			</behavior>
			<appearance>
				<width>715</width>
				<max_top>999999</max_top>
				<theme>default_detailed</theme>
				<overlay_position>top</overlay_position>
			</appearance>
		</ewquickview>
		<ewquickview_developer>
			<selector>
				<category_product_block><![CDATA[div[class*="category-products"] [class*="item"]]]></category_product_block>
				<category_product_image><![CDATA[a[class*="product-image"] img]]></category_product_image>
			</selector>
		</ewquickview_developer>
	</default>
	<extendware>
		<override>
			<block>
				<mage_catalog_product_view_ewquickview_override>
					<mode>extendware</mode>
					<search><class>Mage_Catalog_Block_Product_View</class></search>
					<replace>
						<class>Extendware_EWQuickView_Block_Override_Mage_Catalog_Product_View</class>
						<order>100</order>
					</replace>
				</mage_catalog_product_view_ewquickview_override>
			</block>
	   </override>
	</extendware>
</config>
