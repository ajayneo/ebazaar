<?xml version="1.0"?>
<config>
    <modules>
        <Neo_Custom>
            <version>0.1.1</version>
        </Neo_Custom>
    </modules>
    <frontend>
        <routers>
            <custom>
                <use>standard</use>
                <args>
                    <module>Neo_Custom</module>
                    <frontName>custom</frontName>
                </args>
            </custom>
        </routers>
        <layout>
            <updates>
                <custom>
                    <file>custom.xml</file>
                </custom>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<custom>
				<use>admin</use>
				<args>
					<module>Neo_Custom</module>
					<frontName>custom</frontName>
				</args>
			</custom>
        </routers>
    </admin>
    <adminhtml>
<!-- 		<menu>
			<custom module="custom">
				<title>Custom</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="custom">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>custom/adminhtml_custom</action>
					</items>
				</children>
			</custom>
		</menu> -->
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Neo_Custom>
							<title>Custom Module</title>
							<sort_order>10</sort_order>
						</Neo_Custom>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <shipmentdelete_section>
                                            <title>Delete Shipment</title>
                                        </shipmentdelete_section>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<custom>
					<file>custom.xml</file>
				</custom>
			</updates>
		</layout>
    </adminhtml>  
    <admin>
        <routers>
            <adminhtml> 
                <args>
                    <modules> 
                        <Neo_Custom before="Mage_Adminhtml">Neo_Custom_Adminhtml</Neo_Custom>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>     
    <global>
        <models>
            <custom>
                <class>Neo_Custom_Model</class>
                <resourceModel>custom_mysql4</resourceModel>
            </custom>
            <custom_mysql4>
                <class>Neo_Custom_Model_Mysql4</class>
                <entities>
                    <custom>
                        <table>custom</table>
                    </custom>
                </entities>
            </custom_mysql4>
        </models>
        <resources>
            <custom_setup>
                <setup>
                    <module>Neo_Custom</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </custom_setup>
            <custom_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </custom_write>
            <custom_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </custom_read>
        </resources>
        <blocks>
            <custom>
                <class>Neo_Custom_Block</class>
            </custom>
        </blocks>
        <helpers>
            <custom>
                <class>Neo_Custom_Helper</class>
            </custom>
        </helpers>  
         <events>
            <admin_system_config_changed_section_shipmentdelete_section>
                <observers>
                    <custom>
                        <type>singleton</type>
                        <class>custom/observer</class>
                        <method>handle_adminSystemConfigChangedSection</method>
                    </custom>
                </observers>
            </admin_system_config_changed_section_shipmentdelete_section>
        </events>       
    </global>
</config>