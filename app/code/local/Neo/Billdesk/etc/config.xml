<?xml version="1.0"?>
<config>
  <modules>
    <Neo_Billdesk>
      <version>0.1.0</version>
    </Neo_Billdesk>
  </modules>
  <global>
    <models>
      <billdesk>
        <class>Neo_Billdesk_Model</class>
      </billdesk>
    </models>
    <helpers>
      <billdesk>
        <class>Neo_Billdesk_Helper</class>
      </billdesk>
    </helpers>
    <blocks>
      <billdesk>
        <class>Neo_Billdesk_Block</class>
      </billdesk>
    </blocks>
    <events>
      <sales_order_place_after>
	<observers>
	  <sales_order_observer>
	    <type>singleton</type>
	    <class>Neo_Billdesk_Model_Observer</class>
	    <method>process_order_response</method>
	  </sales_order_observer>
	</observers>
      </sales_order_place_after>
    </events>
  </global>
