			</schedule>
			<run>
				<model>billdesk/observer::updateBillDeskStatusByApi</model>
			</run>
		</update_billdesk_status_by_api>
	</jobs>
</crontab> -->
  <default>
    <payment>
      <billdesk_ccdc_net>
        <model>billdesk/standard</model>
        <active>1</active>
        <order_status>pending</order_status>
        <title>Billdesk (Credit/Debit Card or Netbanking)</title>
        <payment_action>sale</payment_action>
        <allowspecific>0</allowspecific>
        <sort_order>1</sort_order>
      </billdesk_ccdc_net>
    </payment>
  </default>
  <frontend>
    <routers>
      <billdesk>
        <use>standard</use>
        <args>
          <module>Neo_Billdesk</module>
          <frontName>billdesk</frontName>
        </args>
      </billdesk>
    </routers>
  </frontend>
</config>