<?xml version="1.0"?>
<config>
    <modules>
        <Neo_StockLocation>
            <version>0.1.1</version>
        </Neo_StockLocation>
    </modules>
    <global>
        <helpers>
            <stocklocation>
                <class>Neo_StockLocation_Helper</class>
            </stocklocation>
        </helpers>
        <models>
            <stocklocation>
                <class>Neo_StockLocation_Model</class>
                <resourceModel>stocklocation_mysql4</resourceModel>
            </stocklocation>
            <stocklocation_mysql4>
                <class>Neo_StockLocation_Model_Mysql4</class>
                <entities>		  
                    <location>
                        <table>sales_order_stock_location</table>
                    </location>
                </entities>
            </stocklocation_mysql4>
        </models>
        <resources>
            <stocklocation_setup>
                <setup>
                    <module>Neo_StockLocation</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </stocklocation_setup>
            <stocklocation_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </stocklocation_write>
            <stocklocation_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </stocklocation_read>
        </resources>
        <events>            	
            <sales_order_invoice_save_after>
                <observers>
                    <stocklocation>
                        <type>singleton</type>
                        <class>stocklocation/observer</class>
                        <method>sales_order_invoice_save_after</method>
                    </stocklocation>
                </observers>
            </sales_order_invoice_save_after>
        </events>
    </global>
</config> 
