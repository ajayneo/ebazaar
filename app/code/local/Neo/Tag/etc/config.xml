<?xml version="1.0"?>
<config>
	<modules>
		<Neo_Tag>
			<version>0.0.1</version>
		</Neo_Tag>
	</modules>
	<global>
		<events>
			<controller_front_init_routers>
				<observers>
					<neo_tag>
						<class>Neo_Tag_Controller_Router</class>
						<method>initControllerRouters</method>
					</neo_tag>
				</observers>
			</controller_front_init_routers>
		</events>
		<models>
			<tag>
				<rewrite>
					<tag>Neo_Tag_Model_Tag</tag>
				</rewrite>
			</tag>
			<tag_resource>
				<rewrite>
					<tag>Neo_Tag_Model_Resource_Tag</tag>
				</rewrite>
			</tag_resource>
		</models>
	</global>
</config>
