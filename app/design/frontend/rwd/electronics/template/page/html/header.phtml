<script type="text/javascript">

	var toplinks = document.getElementById("top-links");
	var check = 2;

	function toplinksClick()
    {

    	if(check % 2 === 0){
            toplinks.classList.add("active");
        }else{ 
            toplinks.classList.remove("active");
        }
        check = check+1; 
    	
    	return false;
    }


    var nav = document.getElementById("nav");
    var check1 = 2;

	function addclassnav()
    {

    	if(check1 % 2 === 0){
            nav.classList.add("skip-active");
        }else{ 
            nav.classList.remove("skip-active");
        }
        check1 = check1+1;  
    	
    	return false;
    }

</script>

