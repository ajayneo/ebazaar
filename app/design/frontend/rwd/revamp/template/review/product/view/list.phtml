<div class="review_form" name="review_form"><?php echo $this->getChildHtml('review_form') ?></div>
<?php $_items = $this->getReviewsCollection()->getItems();?>
<?php if (count($_items)):?>
	<div class="top-reviews-content">
		<ul id="content" class="top-reviews-ul">
			<?php foreach ($_items as $_review):?>
				<li class="top-reviews-li">
					<div class="top-reviews-title">
						<span class="top-reviews-h4"><?php echo $this->escapeHtml($_review->getTitle()) ?></span>
						<?php $_votes = $_review->getRatingVotes(); ?>
						<?php if (count($_votes)): ?>
							<?php $_percent = 0; ?>
							<?php foreach ($_votes as $_vote): ?>
								<?php $_percent = $_percent + $_vote->getPercent(); ?>
							<?php endforeach; ?>
							<?php $_percent = $_percent / count($_votes); ?>
							<div class="rating-box">
								<div class="rating" style="width:<?php echo $_percent ?>%;"></div>
							</div>
						<?php endif; ?>
					</div>
					<div class="top-reviews-details">
						<?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>
					</div>
					<div class="top-reviews-user-info">
						<p class="top-reviews-user"><?php echo $this->__('%s', $this->escapeHtml($_review->getNickname())) ?></p>
						<p class="top-reviews-date"><?php echo $this->__('%s', $this->formatDate($_review->getCreatedAt()), 'long') ?></p>
					</div>
				</li>
			<?php endforeach; ?>
		</ul>
	</div>
<?php else: ?>
