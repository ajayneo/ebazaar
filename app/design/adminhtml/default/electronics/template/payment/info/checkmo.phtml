<?php echo $this->escapeHtml($this->getMethod()->getTitle()) ?>
<?php if($this->getInfo()->getAdditionalData()): ?>
	<?php $details = @unserialize($this->getInfo()->getAdditionalData()); ?>
	<?php #print_r($details); ?>
	<div class="content">
		<table cellspacing="0" class="form-list">
			<tbody>
				<tr>
					<td class="label">
						<b><?php echo $this->__('Bank: '); ?></b>
					</td>
					<td>
						<?php echo $details['bank_name']; ?>
					</td>
				</tr>
				<tr>
					<td class="label">
						<b><?php echo $this->__('Bank Branch: '); ?></b>
					</td>
					<td>
						<?php echo $details['bank_branch_name']; ?>
					</td>
				</tr>
				<tr>
					<td class="label">
						<b><?php echo $this->__('Cheque Number/Transaction Id: '); ?></b>
					</td>
					<td>
						<?php echo $details['cheque_no']; ?>
					</td>
				</tr>
				<?php if($this->getPayableTo()): ?>
					
				<tr>
					<td class="label">
						<b><?php echo $this->__('Make Check payable to: '); ?></b>
					</td>
					<td>
						<?php echo Mage::helper('payment')->__('%s', $this->escapeHtml($this->getPayableTo())) ?>
					</td>
				</tr>
				<?php endif; ?>
				<?php if($this->getMailingAddress()): ?>
        		<tr>
					<td class="label">
						<b><?php echo Mage::helper('payment')->__('Send Check to:') ?></b>
					</td>
					<td>
						<?php echo nl2br($this->escapeHtml($this->getMailingAddress())) ?>
					</td>
				</tr>
				<?php endif; ?>
			</tbody>
		</table>
	</div>
<?php endif; ?>
